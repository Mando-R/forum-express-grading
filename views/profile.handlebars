<div class="card mb-3">
  <div class="row no-gutters">
    <!-- User Image -->
    <div class="col-md-4">
      <img
        src="{{#if user.image}}{{user.image}}{{else}}https://www.kindpng.com/picc/m/22-223965_no-profile-picture-icon-circle-member-icon-png.png{{/if}}"
        class="card-img" alt="avatar">
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <!-- User Name -->
        <h5 class="card-title">
          {{user.name}}
        </h5>

        <!-- User Email -->
        <p class="card-text">
          {{user.email}}
        </p>

        <!-- User Id -->
        <a class="btn btn-primary" href="/users/{{user.id}}/edit" role="button">
          Edit
        </a>

        <a class="btn btn-info" href="/admin/users" role="button">
          Back to Admin Users
        </a>

        <!-- 已分享 X 則 個人評論 -->
        <p class="card-text">
        <h5>
          已分享 <span class="text-primary"><b>{{commentsAmount}}</b></span> 則 個人評論
        </h5>
        </p>

        <!-- 已評論 X 間餐廳 -->
        <p class="card-text">
        <h5>
          已評論 <span class="text-primary"><b>{{commentsRestaurantAmount}}</b></span> 間 餐廳
        </h5>
        </p>

      </div>
    </div>
  </div>
</div>

<!-- render 個人評論餐廳 -->
<div class="card">
  <div class="card-header">
    <span class="text-primary"><b> {{commentsRestaurantAmount}} </b></span> 已評論餐廳
  </div>

  <div class="card-img m-3">
    <div class="row d-flex flex-wrap justify-content-start">
      {{#each comments}}
      <div class="col-md-1">
        <!-- render Restaurant Image -->
        <a href="/restaurants/{{this.RestaurantId}}">
          <img class="card-img-top " src="{{this.Restaurant.image}}" alt="Card image cap" width="50px" height="50px">
        </a>
      </div>
      {{/each}}
    </div>
  </div>

</div>