<h1>餐廳後台</h1>

<div class="mt-3 mb-0">
  <a href='/admin/restaurants/create'>New restaurant</a>
  <span>|</span>
  <a href="/admin/users">Users</a>
</div>

<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Authority</th>
      <th scope="col">Switch</th>
    </tr>
  </thead>

  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <!-- Name -->
      <td>{{this.name}}</td>
      <!-- Email -->
      <td>{{this.email}}</td>
      <td>
        <!-- Authority：顯示 Admin -->
        {{#if this.isAdmin}}
        <p class="text-danger">admin</p>

        <!-- Authority：顯示 user -->
        {{else}}
        <p class="text-success">user</p>

        {{/if}}

      </td>

      <td>
        <form action="/admin/users/{{this.id}}/toggleAdmin?_method=PUT" method="POST" style="display: inline;">

          <button type="submit" class="btn btn-link">
            {{#if this.isAdmin}}
            <p>admin -> user</p>

            {{else}}
            <p>user -> admin</p>

            {{/if}}
          </button>
        </form>
      </td>

    </tr>
    {{/each}}
  </tbody>
</table>