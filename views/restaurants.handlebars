<ul class="nav nav-pills">
  <!-- "全部" 按鈕 -->
  <li class="nav-item">
    <!-- 「全部」按鈕的情況，categoryId 會是空字串""，注意""中間不能有空格 -->
    <a class="nav-link {{#ifCond "" categoryId}}active{{/ifCond}}" href="?categoryId=">全部</a>
  </li>

  <!--  -->
  <!-- 迭代 categories 變數：1. 取出分類名稱， -->
  {{#each categories}}
  <li class="nav-item">

    <!-- 2. 把 id 加到網址<href>，變成 restaurants?categoryId=this.id，之後 controller 可拿到參數 -->
    <!-- activr 屬性：點擊後反藍底；參考 Bootstrap-Navs的Pills-->
    <a class="nav-link {{#ifCond this.id ../categoryId}}active{{/ifCond}}" href="?categoryId={{this.id}}">
      {{this.name}}
    </a>

  </li>
  {{/each}}
</ul>

<br />

<div class="row">
  {{#each restaurants}}
  <div class="col-md-4">
    <div class="card mb-4 shadow-sm">
      <img class="card-img-top" src="{{this.image}}" alt="Card image cap" width="286px" height="180px">
      <div class="card-body">

        <p class="card-text">
          <!-- Name -->
          <a href="/restaurants/{{this.id}}">
            {{this.name}}
          </a>
        </p>

        <!-- restController.getRestaurants：
        categoryName: restaurant.Category.name -->
        <span class="badge badge-secondary">{{this.categoryName}}</span>

        <!-- restController.getRestaurants：
        description: restaurant.dataValues.description.substring 0, 50 -> 切割出 50 字元 -->
        <p class="card-text">{{this.description}}</p>

      </div>
    </div>
  </div>
  {{/each}}
</div>
<br />
<br />