<h1>TOP 10 人氣收藏餐廳</h1>
<hr />
<div class="d-flex align-items-center flex-column">

  {{#each restaurants}}
  <div class="card mb-3" style="width: 540px;">
    <div class="row no-gutters">

      <div class="col-md-4">
        <img
          src="{{#if this.image}}{{this.image}}{{else}}https://p.kindpng.com/picc/s/21-216273_restaurant-logo-big-image-restaurant-logo-png-free.png{{/if}}"
          class="card-img" alt="restaurant-photo">
      </div>

      <div class="col-md-8">
        <div class="card-body">

          <h5 class="card-title">{{this.name}}</h5>

          <span class="badge badge-secondary">Favorites: {{this.FavoriteCount}}</span>

          <p class="card-text">{{this.description}}</p>

          <a class="btn btn-primary" href="/restaurants/{{this.id}}" role="button">
            Show
          </a>

          {{#if this.isFavorited}}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-danger">
              移除最愛
            </button>
          </form>

          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-outline-danger">
              加到最愛
            </button>
          </form>
          {{/if}}
        </div>
      </div>

    </div>
  </div>
  {{/each}}
</div>